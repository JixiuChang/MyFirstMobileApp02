<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Layout.LayoutContent.FlexLayout.FlexLayoutView"
             Title="{Binding Title}">

    <FlexLayout Direction="RowReverse" JustifyContent="SpaceAround" AlignItems="Center" BackgroundColor="#bfffff">
        <VerticalStackLayout >
            <BoxView Color="#ed008a" WidthRequest="50" HeightRequest="50" Margin="5" VerticalOptions="End"/>
            <Label Text="Magenta" FontSize="12"/>
        </VerticalStackLayout>
        <VerticalStackLayout >
            <BoxView Color="#d161fa" WidthRequest="50" HeightRequest="50" Margin="5"/>
            <Label Text="Violet" FontSize="12"/>
        </VerticalStackLayout>
        <VerticalStackLayout >
            <BoxView Color="#ffb8c8" WidthRequest="50" HeightRequest="50" Margin="5"/>
            <Label Text="Peach" FontSize="12"/>
        </VerticalStackLayout>
    </FlexLayout>

</ContentPage>