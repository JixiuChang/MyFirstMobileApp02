<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.APPControl.Entry.EntryView"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Center">
        <Entry x:Name="EntryValue" Placeholder="Enter Text Here" PlaceholderColor="#777777" Text="{Binding EntryText}" TextColor="#ffb8c8" WidthRequest="300" HorizontalOptions="Center"/>

        <BoxView HeightRequest="2" Color="#666666" WidthRequest="320"/>

        <Button Text="Next" HorizontalOptions="Center" Margin="10" TextColor="#ffffff" BackgroundColor="#ff4466" Command="{Binding Clicked}"/>
    </StackLayout>

</ContentPage>