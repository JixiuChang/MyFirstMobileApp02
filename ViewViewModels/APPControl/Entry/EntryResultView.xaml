<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.APPControl.Entry.EntryResultView"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Center">
        <Label TextColor="#885567" HorizontalOptions="Center" FontAttributes="Bold" FontSize="30" Text="Entry Value: "/>

        <BoxView HeightRequest="2" Color="#888888" WidthRequest="320" HorizontalOptions="Center"/>

        <Label TextColor="#bb6677" HorizontalOptions="Center" FontSize="24" Text="{Binding EntryValueText}"/>
    </StackLayout>
    
</ContentPage>