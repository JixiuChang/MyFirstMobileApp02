<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.APPControl.Picker.DnTPicker.DnTPickerView"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="ImageButton">
            <Setter Property="Margin" Value="40"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <ImageButton Source="Images/dpbuttonblue.png" 
                     Command="{Binding OnDnTPickerXAMLClicked}" 
                     VerticalOptions="StartAndExpand"
                     HorizontalOptions="Center"/>

        <BoxView HeightRequest="2" Color="#888888"/>

        <ImageButton Source="Images/dpbuttonred.png" 
                     Command="{Binding OnDnTPickerVMClicked}" 
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="End"/>

    </VerticalStackLayout>

</ContentPage>