<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.APPControl.Picker.PickerView"
             Title="{Binding Title}">


    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="40"/>
        </Style>
    </ContentPage.Resources>
    
    <StackLayout VerticalOptions="Center">
        <Button Command="{Binding ListPickerClicked}" Text="Picker"/>

        <BoxView HeightRequest="2" Color="#888888" WidthRequest="500" HorizontalOptions="Center" Margin="50, 50, 50, 50"/>

        <Button Command="{Binding DnTPickerClicked}" Text="DnT Picker"/>
    </StackLayout>

</ContentPage>